{
	"name": "neonbug/meexo",
	"description": "Meexo CMS",
	"keywords": ["meexo", "cms", "laravel", "php"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.3.*", 
		"bkwld/croppa": "~4.0",
		"flowjs/flow-php-server": "dev-master",
		"google/apiclient": "^1.1", 
		"neonbug/meexo-common": "0.*", 
		"neonbug/meexo-translation": "0.*", 
		"neonbug/meexo-user": "0.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"barryvdh/composer-cleanup-plugin": "0.1.x@dev",
		"symfony/dom-crawler": "3.1.*",
		"symfony/css-selector": "3.1.*"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		},
		"files": [
			"app/helpers.php"
		]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
